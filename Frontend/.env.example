# ============================================================================
# xWin_Dash Frontend - Environment Configuration
# React 18 + TypeScript 5 + Vite 5
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
VITE_APP_NAME=xWin_Dash
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# ============================================================================
# API
# ============================================================================
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# ============================================================================
# PYLAB (AI Services)
# ============================================================================
VITE_PYLAB_URL=http://localhost:8001
VITE_PYLAB_ENABLED=true

# ============================================================================
# AUTHENTICATION
# ============================================================================
VITE_AUTH_STORAGE_KEY=xwin_auth_token
VITE_AUTH_REFRESH_INTERVAL=3600000

# ============================================================================
# FEATURES FLAGS
# ============================================================================
VITE_FEATURE_AI=true
VITE_FEATURE_AURA=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_WORKFLOWS=true
VITE_FEATURE_UNIVERSE=true
VITE_FEATURE_SOCIAL_BUFFER=true
VITE_FEATURE_EMAIL_MARKETING=true
VITE_FEATURE_ADS_TOOL=true

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry (Error Tracking)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production

# Hotjar (Analytics)
VITE_HOTJAR_ID=
VITE_HOTJAR_VERSION=6

# ============================================================================
# WEBSOCKETS (Real-time)
# ============================================================================
VITE_WS_URL=ws://localhost:6001
VITE_WS_KEY=
VITE_WS_CLUSTER=mt1

# ============================================================================
# STORAGE
# ============================================================================
VITE_STORAGE_PREFIX=xwin_
VITE_STORAGE_VERSION=1

# ============================================================================
# UI/UX
# ============================================================================
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=pt-BR
VITE_ITEMS_PER_PAGE=20

# ============================================================================
# PERFORMANCE
# ============================================================================
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_COMPRESSION=true

# ============================================================================
# DEVELOPMENT
# ============================================================================
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_ENABLE_DEVTOOLS=false

# ============================================================================
# TESTING
# ============================================================================
VITE_TEST_MODE=false
VITE_MOCK_API=false

# ============================================================================
# SECURITY
# ============================================================================
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=false

# ============================================================================
# LOGGING
# ============================================================================
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=false
