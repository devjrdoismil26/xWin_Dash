{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "declaration": true,
    "outDir": "./dist/types",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "vite.config.js",
    "vitest.config.js",
    "playwright.config.js",
    "tailwind.config.js",
    "postcss.config.js",
    "eslint.config.js",
    "jest.config.js",
    "optimization.config.js",
    "image-optimization.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}

