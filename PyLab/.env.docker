# === APLICAÃ‡ÃƒO ===
APP_NAME="PyLab - xWin Dash"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:4003

# === SERVIDOR ===
HOST=0.0.0.0
PORT=4003

# === DATABASE ===
# ConfiguraÃ§Ã£o para conectar com o backend Laravel
BACKEND_URL=http://app:4001
BACKEND_API_URL=http://app:4001/api

# === CACHE ===
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PORT=4005
REDIS_PASSWORD=null

# === AI PROVIDERS ===
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# === HUGGING FACE ===
HF_HOME=/app/cache/huggingface
TRANSFORMERS_CACHE=/app/cache/transformers
HF_TOKEN=your-huggingface-token

# === MEDIA STORAGE ===
MEDIA_STORAGE_PATH=/app/shared_media
MEDIA_MAX_SIZE=100MB

# === MODELS ===
DEFAULT_TEXT_MODEL=gpt-3.5-turbo
DEFAULT_IMAGE_MODEL=dall-e-2
DEFAULT_VIDEO_MODEL=runway-gen2

# === PERFORMANCE ===
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=300
MODEL_CACHE_SIZE=2GB

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=/app/logs/pylab.log

# === SECURITY ===
API_KEY_REQUIRED=false
CORS_ORIGINS=http://localhost:4002,http://localhost:4001

# === MONITORING ===
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true